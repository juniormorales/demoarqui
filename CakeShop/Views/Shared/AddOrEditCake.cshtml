@model CakeCreateUpdateViewModel
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label>Nombre del Pastel</label>
                <input asp-for="CakeDto.Name" class="form-control" />
                <span asp-validation-for="CakeDto.Name"></span>
            </div>
            <div class="form-group">
                <label>Categoría</label>
                <select class="custom-select" asp-for="CakeDto.CategoryId">
                    <option value=""></option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CakeDto.CategoryId"></span>
            </div>
            <div class="form-group">
                <label>Descripción breve</label>
                <input asp-for="CakeDto.ShortDescription" class="form-control" />
                <span asp-validation-for="CakeDto.ShortDescription"></span>
            </div>
            <div class="form-group">
                <label>Descripción larga</label>
                <textarea asp-for="CakeDto.LongDescription" class="form-control"></textarea>
                <span asp-validation-for="CakeDto.LongDescription"></span>
            </div>
            <div class="form-group">
                <label>Precio</label>
                <input asp-for="CakeDto.Price" class="form-control" />
                <span asp-validation-for="CakeDto.Price"></span>
            </div>
            <div class="form-group">
                <label>URL de la imagen</label>
                <input asp-for="CakeDto.ImageUrl" class="form-control" />
                <span asp-validation-for="CakeDto.ImageUrl"></span>
            </div>
            <div class="form-check form-group">
                <input type="checkbox" class="form-check-input" asp-for="CakeDto.IsCakeOfTheWeek">
                <label>¿Es el pastel de la semana?</label>
                <span asp-validation-for="CakeDto.IsCakeOfTheWeek"></span>
            </div>
            <div class="form-group">
                <button class="btn buy-now-btn">Guardar</button>
            </div>
        </form>
    </div>
</div>